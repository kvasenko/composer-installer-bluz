{
    "name": "kvasenko/composer-installer-bluz",
    "description": "This custom installer allows you to manage Bluz Skeleton modules with composer.",
    "type": "composer-plugin",
    "keywords": ["bluz", "composer"],
    "homepage": "https://bitbucket.org/kvasenko/composer-installer-bluz",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/composer/composer.git"
        }
    ],
    "require": {
        "composer-plugin-api": "1.0.0",
        "symfony/filesystem": "3.0.*@dev",
        "symfony/finder": "2.8.*@dev"
    },
    "require-dev": {
        "composer/composer": "~1.0@dev",
        "composer/installers": "~1.0",
        "phpunit/phpunit": "~4.4"
    },
    "autoload": {
        "psr-0": {
            "Bashmach\\Composer": "src/"
        }
    },
    "extra": {
        "class": "Bashmach\\Composer\\Installers\\BluzModuleInstallerPlugin"
    }
}
